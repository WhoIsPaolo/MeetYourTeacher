<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="112dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="123dp"
        android:layout_marginTop="26dp"
        android:layout_marginRight="104dp"
        app:srcCompat="@drawable/myt_logo" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="172dp"
        android:layout_marginRight="54dp"
        android:backgroundTint="@color/myt_white"
        android:ems="10"
        android:hint="email"
        android:inputType="textPersonName"
        android:textColor="@color/myt_white"
        android:textColorHint="@color/myt_white" />


    <android.support.design.widget.TextInputLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="265dp"
        android:layout_marginRight="63dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColor="@color/myt_white"
        android:textColorHint="@color/myt_white"
        app:backgroundTint="@color/myt_white"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="221dp"
            android:layout_height="51dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/myt_white"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:textColor="@color/myt_white"
            android:textColorHint="@color/myt_white" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="353dp"
        android:layout_marginRight="70dp"
        android:background="@color/myt_orange"
        android:onClick="onClick"
        android:text="LOGIN"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/myt_white" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="420dp"
        android:layout_marginRight="61dp"
        android:background="@color/myt_orange"
        android:onClick="CreateAccount"
        android:text="REGISTER"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/myt_white" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="494dp"
        android:layout_marginRight="244dp"
        android:background="#1B2D90"
        android:onClick="VideoTrailer"
        app:srcCompat="@drawable/trailer_button" />

</RelativeLayout>